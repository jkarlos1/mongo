#header.background-gradient
	#head_home
		a(href="/")
			img(src="/img/logo_giombu.png")
		.pull-right
			include form_suscription
	nav(role="navigation").navbar.navbar-default
		.container-fluid
			.collapse.navbar-collapse
				ul.nav.navbar-nav.navbar-left
					li
						a( href="#", data-toggle="modal", data-target="#SelectorFranchiseModal") Cambiar de cuidad
							icon.icon-chevron-down
					li 
						a(href="/") Ofertas	
						
						include ../partials/franchises/franchise_selector_modal
					-if(typeof expose.selected_franchise !== "undefined")
						li
							a(href="#") 
								strong Ofertas de:  #{expose.selected_franchise.name}

				form.navbar-form.navbar-left(role='search', method="GET", action="/")
					.form-group
						input.form-control(name="search_query", type='text', placeholder='Buscar oferta')
						button.btn.btn-default(type='submit') Buscar

				

				ul.nav.navbar-nav.navbar-right
					-if ((typeof expose.user) === "undefined")
						li
							a(href="/users/create")
								span.glyphicon.glyphicon-plus.col-md-pull-1
								|Registrate
						li
							a(href='#myModal', role='button', data-toggle='modal')
								span.glyphicon.glyphicon.glyphicon-log-in.col-md-pull-1
								|Accede
					-else
						li
							a(href="/users/profile" )
								span.glyphicon.glyphicon-user.col-md-pull-1
								|#{expose.user.name}
						li
							a(href="/users/logout" )
								span.glyphicon.glyphicon-log-out.col-md-pull-1
								|Salir
	-if (expose.message)
		.alert.alert-info.alert-dismissable
			button(type="button" class="close" data-dismiss="alert" aria-hidden="true")&times;
			p #{expose.message}
	-if (expose.error)
		.alert.alert-danger.alert-dismissable
			button(type="button" class="close" data-dismiss="alert" aria-hidden="true")&times;
			p #{expose.error}
